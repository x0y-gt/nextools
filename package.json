{
  "name": "@tnt/nextools",
  "version": "0.9.0",
  "description": "React toolkit library focused on nextjs, RSC, tailwind and shadcn",
  "author": "x0y <x0y@milkyweb.co>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/@tnt/reactools/forms.cjs",
  "module": "./dist/@tnt/reactools/forms.js",
  "exports": {
    "./forms": {
      "import": "./dist/@tnt/reactools/forms.js",
      "require": "./dist/@tnt/reactools/forms.cjs",
      "types": "./dist/forms.d.ts"
    },
    "./utils": {
      "import": "./dist/@tnt/reactools/utils.js",
      "require": "./dist/@tnt/reactools/utils.cjs",
      "types": "./dist/utils.d.ts"
    },
    "./session": {
      "import": "./dist/@tnt/reactools/session.js",
      "require": "./dist/@tnt/reactools/session.cjs",
      "types": "./dist/session.d.ts"
    },
    "./auth": {
      "import": "./dist/@tnt/reactools/auth.js",
      "require": "./dist/@tnt/reactools/auth.cjs",
      "types": "./dist/auth.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "react-hook-form": "^7.52.2",
    "rollup": "^4.21.0",
    "typescript": "^5.5.4",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "iron-session": "^8.0.3"
  }
}
