{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "es2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ES2015",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
